{
  "name": "team-grass-tracker",
  "displayName": "🌱 Team Grass Tracker",
  "description": "Git 커밋 기반 팀 잔디 시각화 도구",
  "version": "2.0.0",
  "publisher": "junnnny",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "keywords": ["git", "commit", "visualization", "team", "grass"],
  "repository": {
    "type": "git",
    "url": "https://github.com/shfkswhd/team_grass_tracker.git"
  },
  "bugs": {
    "url": "https://github.com/shfkswhd/team_grass_tracker/issues"
  },
  "homepage": "https://github.com/shfkswhd/team_grass_tracker#readme",
  "license": "MIT",
  "activationEvents": [
    "onView:teamGrassTrackerView"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Team Grass Tracker",
      "properties": {
        "teamGrassTracker.teamTitle": {
          "type": "string",
          "default": "Team Grass Tracker",
          "description": "팀 제목"
        },
        "teamGrassTracker.teamMembers": {
          "type": "array",
          "default": [],
          "description": "팀 멤버 목록",
          "items": {
            "type": "object",
            "properties": {
              "authorEmail": {
                "type": "string",
                "description": "커밋에 찍히는 이메일 (권장)"
              },
              "githubName": {
                "type": "string",
                "description": "GitHub 사용자명 (선택, 이메일 미입력 시 사용)"
              },
              "displayName": {
                "type": "string",
                "description": "표시할 이름"
              },
              "colorHue": {
                "type": "number",
                "description": "색상 (0-360)",
                "minimum": 0,
                "maximum": 360
              }
            }
          }
        },
        "teamGrassTracker.targetRepository": {
          "type": "string",
          "default": "",
          "description": "대상 저장소 경로"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "teamGrassTracker",
          "title": "Team Grass Tracker",
          "icon": "$(calendar)"
        }
      ]
    },
    "views": {
      "teamGrassTracker": [
        {
          "id": "teamGrassTrackerView",
          "name": "🌱 팀 잔디",
          "type": "webview",
          "icon": "$(calendar)"
        }
      ]
    },
    "commands": [
      {
        "command": "teamGrassTracker.refresh",
        "title": "새로고침",
        "icon": "$(refresh)"
      },
      {
        "command": "teamGrassTracker.addMember",
        "title": "팀원 추가",
        "icon": "$(person-add)"
      },
      {
        "command": "teamGrassTracker.selectRepository",
        "title": "저장소 선택",
        "icon": "$(folder)"
      },
      {
        "command": "teamGrassTracker.attendanceCheck",
        "title": "출석체크",
        "icon": "$(checklist)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "teamGrassTracker.refresh",
          "when": "view == teamGrassTrackerView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "echo 'Extension ready'",
    "compile": "echo 'No compilation needed'",
    "watch": "echo 'No watch needed'"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}
